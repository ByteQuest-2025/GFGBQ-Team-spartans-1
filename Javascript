document.getElementById("checkRisk").addEventListener("click", function() {
    const symptom = document.getElementById("symptomInput").value.toLowerCase();

    // Example logic: you can replace this with your actual engine
    let riskScore = 0;
    let matchedSymptoms = [];

    if (symptom.includes("jaundice")) {
        riskScore += 0.5;
        matchedSymptoms.push("jaundice");
    }
    if (symptom.includes("itching")) {
        riskScore += 0.3;
        matchedSymptoms.push("itching");
    }

    // Display results on page
    const resultDiv = document.getElementById("riskResult");
    resultDiv.innerHTML = `
        <p><strong>Risk Score:</strong> ${riskScore}</p>
        <p><strong>Matched Symptoms:</strong> ${matchedSymptoms.join(", ") || "None"}</p>
    `;
});
